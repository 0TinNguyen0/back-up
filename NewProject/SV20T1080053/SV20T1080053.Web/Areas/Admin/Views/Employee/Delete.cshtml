@model SV20T1080053.DomainModels.Employee
@{
    ViewBag.Title = "Xóa nhân viên";
}

<div class="box box-danger">
    <div class="box box-body">
        <form action="~/Admin/Employee/Delete/@Model.EmployeeID" method="post">
            <div class="form-group">
                <label>Họ và tên:</label>
                <p class="form-control-static" style="border-bottom:1px dotted #888888 ">@Model.FullName</p>
            </div>

            <div class="form-group">
                <label>Ngày sinh:</label>
                <p class="form-control-static" style="border-bottom:1px dotted #888888 ">@Model.BirthDate</p>
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <p class="form-control-static" style="border-bottom:1px dotted #888888 ">@Model.Address</p>
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <p class="form-control-static" style="border-bottom:1px dotted #888888 ">@Model.Phone</p>
            </div>

            <div class="form-group">
                <label>Email:</label>
                <p class="form-control-static" style="border-bottom:1px dotted #888888 ">@Model.Email</p>
            </div>

            <div class="form-group">
                <label>Trạng thái:</label>
                @if(Model.IsWorking)
                {
                    <p class="form-control-static" style="border-bottom:1px dotted #888888 ">Nhân viên đang làm việc</p>
                }
                else
                {
                    <p class="form-control-static" style="border-bottom:1px dotted #888888 ">Nhân viên không làm việc</p>
                }
            </div>

            <div class="form-group">
                <label style="display: block;">Ảnh cá nhân:</label>
                <div style="display: inline-block;">
                    <img class="profile-user-img img-responsive" src="~/Images/Employees/@Model.Photo" alt="User profile picture">
                </div>
            </div>

            <button type="submit" class="btn btn-danger">
                <i class="fa fa-xmark"></i>
                Xóa dữ liệu
            </button>
            <a href="~/Admin/Employee" class="btn btn-default">Quay lại</a>

        </form>
    </div>
</div>

